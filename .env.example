# DATABASE_URL:
# Para producción en Supabase, usa el puerto 6543 (Transaction Pooler).
# Ejemplo: postgres://[user]:[password]@[host]:6543/postgres?pgbouncer=true

# DIRECT_URL:
# Se usa para migraciones (Prisma Migrate), usa el puerto 5432 (Session Pooler).
# Ejemplo: postgres://[user]:[password]@[host]:5432/postgres

DATABASE_URL="postgres://postgres:[TU_CLAVE]@[TU_HOST].supabase.co:6543/postgres?pgbouncer=true"
DIRECT_URL="postgres://postgres:[TU_CLAVE]@[TU_HOST].supabase.co:5432/postgres"

# Autenticación
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu-secreto-super-seguro-generado-aleatoriamente"

# WhatsApp API (Meta)
WHATSAPP_API_TOKEN="tu_token_de_meta"
WHATSAPP_PHONE_ID="tu_phone_id"
WHATSAPP_VERIFY_TOKEN="restaurante_token"
